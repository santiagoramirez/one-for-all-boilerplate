{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@app/*": ["app/src/*"],
      "@server/*": ["server/src/*"]
    }
  },
  "typeRoots": ["./app/src", "./server/src"],
  "include": [
    "./app/**/*",
    "./server/src/**/*"
  ]
}
