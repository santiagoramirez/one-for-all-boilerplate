{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@app/*": ["packages/app/src/*"],
      "@server/*": ["packages/server/src/*"]
    }
  },
  "include": ["./packages/app/src/**/*", "./packages/server/src/**/*"],
  "exclude": [".history", "dist", "node_modules"]
}
