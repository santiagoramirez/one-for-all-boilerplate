{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@app/desktop/*": ["app/desktop/src/*"],
      "@app/mobile/*": ["app/mobile/src/*"],
      "@app/shared/*": ["app/shared/src/*"],
      "@app/web/*": ["app/web/src/*"],
      "@server/*": ["server/src/*"]
    }
  },
  "typeRoots": [
    "./app/desktop/src",
    "./app/mobile/src",
    "./app/shared/src",
    "./app/web/src",
    "./server/src"
  ],
  "include": ["./app/**/src/**/*", "./server/src/**/*"]
}
