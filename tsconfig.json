{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["*"],
      "@components/*": ["components/*"],
      "@services/*": ["services/*"],
      "@store": ["store"],
      "@store/*": ["store/*"],
      "@styles/*": ["styles/*"],
      "@types": ["types"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": [".history", "dist", "node_modules"]
}
