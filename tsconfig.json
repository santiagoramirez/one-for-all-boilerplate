{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["*"],
      "@actions/*": ["actions/*"],
      "@components/*": ["components/*"],
      "@reducers/*": ["reducers/*"],
      "@services/*": ["services/*"],
      "@store": ["store"],
      "@styles/*": ["styles/*"],
      "@types": ["types"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    ".history",
    "dist",
    "node_modules",
  ]
}
