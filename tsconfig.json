{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@app/*": ["packages/app/src/*"],
      "@server/*": ["packages/server/src/*"]
    }
  },
  "typeRoots": ["./packages/app/src", "./packages/server/src"],
  "include": [
    "./packages/app/**/*",
    "./packages/server/src/**/*",
    "packages/server/app.web.tsx"
  ]
}
